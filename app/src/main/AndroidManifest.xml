<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.demomxh">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:name=".Database.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_smartphone"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.MainScreen.TabNewFeeds.CreatePostActivity" />
        <activity android:name=".View.MainScreen.TabChat.AddGroupChatActivity" />
        <activity android:name=".View.MainScreen.TabChat.ChatActivity" />
        <activity android:name=".View.MainScreen.TabMenu.FriendsListActivity" />
        <activity android:name=".View.MainScreen.ProfileActivity" />
        <activity android:name=".View.MainScreen.TabNewFeeds.CommentActivity" />
        <activity android:name=".View.MainScreen.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.MainScreen.MainScreenActivity" />
        <activity android:name=".View.Authen.RegisterActivity" />
        <activity android:name=".View.Authen.LoginActivity" />
    </application>

</manifest>